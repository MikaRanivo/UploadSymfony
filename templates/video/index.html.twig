{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
<br>
<div class="container">

	<h1 class="text-white">Fichier Video</h1>
	<br>
	{% if videoFiles is empty %}
		<p>Aucune Fichier Video téléchargée.</p>
	{% else %}
		<div class="container">
			<table class="table rounded table-dark table-hover">
				<thead>
					<tr>
						<th>Fichier Video</th>
						<th>Action</th>
					</tr>

				</thead>
				<tbody>
					{% for videoFile in videoFiles %}
						<tr>
							<td>{{ videoFile }}</td>
							<td>
								<div class="d-flex ">
									<a class="btn btn-danger me-2" href=" {{path('app_video_delete', {'filename': videoFile }) }} ">delete</a>
									<a class="btn btn-warning me-2" href="{{path('app_video_download', {'filename': videoFile }) }} ">Download</a>
								</div>
							</td>
						</tr>
					</div>
				</tbody>
			</tr>

		{% endfor %}
	</tbody>

</table></div>{% endif %}<br><br><h1 class="text-white">Ajouter des fichier</h1><br><div class="container rounded bg-dark " style="padding:20px; width:50%;"><form class="mx-auto" method="post" enctype="multipart/form-data" action="{{ path('app_video_upload') }}">
<input class="text-white" type="file" name="videoFile" required>
<button class="btn btn-primary" type="submit">Submite</button></form></div></div>
{% endblock %}
